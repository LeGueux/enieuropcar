<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/id_vehicule_reservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="idVehicule"/>
    <TextView
        android:id="@+id/libelle_vehicule_reservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="libelle"/>
    <TextView
        android:id="@+id/nbPlaces_vehicule_reservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nombres places"/>
    <TextView
        android:id="@+id/location_min_vehicule_reservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location min"/>

    <TextView
        android:id="@+id/location_max_vehicule_reservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location max"/>
    <TextView
        android:id="@+id/tarif_min_vehicule_reservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tarif min"/>

    <TextView
        android:id="@+id/tarif_max_vehicule_reservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tarif max"/>

    <EditText
        android:id="@+id/add_debut_reservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date début"/>


    <EditText
        android:id="@+id/add_fin_reservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date fin"/>


    <EditText
        android:id="@+id/add_tarif_reservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Tarif journalier"/>


    <Button
        android:id="@+id/reserver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Réserver"/>

</LinearLayout>